    <div class="container">

      <%= bootstrap_flash %>
      
      <div class="row">
        
        <div class="col-md-9 main_content">
          
          <h2>Listing users</h2>

          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Screen name</th>
                <th>User guid</th>
                <th>Followers count</th>
                <th>Profile background image url</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.screen_name %></td>
                  <td><%= user.user_guid %></td>
                  <td><%= user.followers_count %></td>
                  <td><%= user.profile_background_image_url %></td>
                  <td><%= link_to 'Show', user %></td>
                  <td><%= link_to 'Edit', edit_user_path(user) %></td>
                  <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>         
          <hr>
        </div>
        <div class="col-md-3 sidebar">
          <%= render "shared/sidebar_nav" %>
        </div>
        
      </div>
      
      <hr>

      <%= render "shared/footer" %>
    </div> <!-- /container -->
